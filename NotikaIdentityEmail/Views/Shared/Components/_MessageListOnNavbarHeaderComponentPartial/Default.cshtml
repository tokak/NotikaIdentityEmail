@model List<MessageListWithUserInfo>

<li class="nav-item dropdown">
    <a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="nav-link dropdown-toggle"><span><i class="notika-icon notika-mail"></i></span></a>
    <div role="menu" class="dropdown-menu message-dd animated zoomIn">
        <div class="hd-mg-tt">
            <h2>Mesajlar</h2>
        </div>
        <div class="hd-message-info">
            @foreach (var item in Model)
            {
                <a href="#">
                    <div class="hd-message-sn">

                        <div class="hd-message-img" style="width: 45px; margin: revert-layer;">

                            @if (item.ImageUrl == null)
                            {
                                <img src="/notika-master/notika/green-horizotal/img/post/1.jpg" style="height:45px;width:45px;" alt="">

                            }
                            @if (item.ImageUrl != null)
                            {
                                <img src="/userimages/@item.ImageUrl" alt="" style="height:45px;width:45px;" />
                            }
                        </div>

                        <div class="hd-mg-ctn">
                            <h3>@item.FullName </h3>
                            <p>@item.MessageDetail</p>
                        </div>
                    </div>
                </a>

            }
        </div>
        <div class="hd-mg-va">
            <a href="/Message/Inbox/">Tümünü Gör</a>
        </div>
    </div>
</li>