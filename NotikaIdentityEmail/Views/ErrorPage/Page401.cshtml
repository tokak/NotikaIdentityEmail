
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>401 - Yetkisiz Erişim </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #2563eb;
            --light-blue: #3b82f6;
            --dark-blue: #1e40af;
            --warning-orange: #f59e0b;
            --gradient-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --shadow-color: rgba(37, 99, 235, 0.1);
            --warning-shadow: rgba(245, 158, 11, 0.1);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--gradient-bg);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .error-container {
            min-height: 100vh;
            position: relative;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .error-content {
            position: relative;
            z-index: 2;
            padding: 2rem 1rem;
        }

        .error-number {
            font-size: 12rem;
            font-weight: 700;
            color: var(--warning-orange);
            text-shadow: 0 4px 20px var(--warning-shadow);
            line-height: 1;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, var(--warning-orange), #fbbf24);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .error-title {
            font-size: 2rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .error-description {
            font-size: 1.1rem;
            color: #64748b;
            margin-bottom: 2.5rem;
            line-height: 1.6;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-login {
            background: linear-gradient(45deg, var(--primary-blue), var(--light-blue));
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow-color);
            text-decoration: none;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-right: 1rem;
            margin-bottom: 1rem;
        }

        .btn-home {
            background: linear-gradient(45deg, #6b7280, #9ca3af);
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(107, 114, 128, 0.1);
            text-decoration: none;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 1rem;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(37, 99, 235, 0.2);
            color: white;
        }

        .btn-home:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(107, 114, 128, 0.2);
            color: white;
        }

        .lock-icon {
            font-size: 4rem;
            color: var(--warning-orange);
            margin-bottom: 2rem;
            opacity: 0.8;
            animation: shake 2s ease-in-out infinite;
        }

        @@keyframes shake {
            0%, 100%

        {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-5deg);
        }

        75% {
            transform: rotate(5deg);
        }

        }

        .cloud-decoration {
            position: absolute;
            color: rgba(37, 99, 235, 0.05);
            font-size: 2rem;
            animation: drift 20s linear infinite;
        }

        .cloud-1 {
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .cloud-2 {
            top: 20%;
            right: 15%;
            animation-delay: 5s;
        }

        .cloud-3 {
            bottom: 30%;
            left: 5%;
            animation-delay: 10s;
        }

        .cloud-4 {
            bottom: 15%;
            right: 10%;
            animation-delay: 15s;
        }

        @@keyframes drift {
            0%

        {
            transform: translateX(0px);
        }

        50% {
            transform: translateX(20px);
        }

        100% {
            transform: translateX(0px);
        }

        }

        .security-badge {
            background: rgba(245, 158, 11, 0.1);
            border: 2px solid rgba(245, 158, 11, 0.2);
            border-radius: 15px;
            padding: 1rem;
            margin-bottom: 2rem;
            display: inline-block;
        }

            .security-badge i {
                color: var(--warning-orange);
                font-size: 1.2rem;
                margin-right: 8px;
            }

        .security-text {
            color: #92400e;
            font-size: 0.9rem;
            font-weight: 500;
            margin: 0;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .error-number

        {
            font-size: 8rem;
        }

        .error-title {
            font-size: 1.5rem;
        }

        .error-description {
            font-size: 1rem;
            padding: 0 1rem;
        }

        .lock-icon {
            font-size: 3rem;
        }

        .btn-login, .btn-home {
            display: block;
            width: 100%;
            margin-right: 0;
            margin-bottom: 1rem;
            justify-content: center;
        }

        }

        @@media (max-width: 576px) {
            .error-number

        {
            font-size: 6rem;
        }

        .error-title {
            font-size: 1.3rem;
        }

        .btn-login, .btn-home {
            padding: 10px 25px;
            font-size: 0.9rem;
        }

        .security-badge {
            padding: 0.8rem;
        }

        }

        /* Loading animation */
        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="error-container d-flex align-items-center justify-content-center">
        <!-- Background decorations -->
        <div class="cloud-decoration cloud-1">
            <i class="fas fa-cloud"></i>
        </div>
        <div class="cloud-decoration cloud-2">
            <i class="fas fa-cloud"></i>
        </div>
        <div class="cloud-decoration cloud-3">
            <i class="fas fa-cloud"></i>
        </div>
        <div class="cloud-decoration cloud-4">
            <i class="fas fa-cloud"></i>
        </div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 col-12">
                    <div class="error-content text-center fade-in">
                        <!-- Lock icon -->
                        <div class="lock-icon">
                            <i class="fas fa-lock"></i>
                        </div>

                        <!-- 401 number -->
                        <div class="error-number">401</div>

                        <!-- Error title -->
                        <h1 class="error-title">Yetkisiz Erişim</h1>

                        <!-- Security badge -->
                        <div class="security-badge">
                            <i class="fas fa-shield-alt"></i>
                            <span class="security-text">Bu sayfaya erişim için yetkiniz bulunmamaktadır</span>
                        </div>

                        <!-- Error description -->
                        <p class="error-description">
                            Bu içeriğe erişebilmek için giriş yapmanız gerekmektedir. Lütfen önce hesabınıza giriş yapın veya yöneticinizle iletişime geçin.
                        </p>

                        <!-- Action buttons -->
                        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center">
                            <a href="/Login/UserLogin" class="btn-login">
                                <i class="fas fa-sign-in-alt"></i>
                                Giriş Yap
                            </a>
                            <a href="/Register/CreateUser" class="btn-home">
                                <i class="fas fa-user-plus"></i>
                                Kayıt Ol
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>