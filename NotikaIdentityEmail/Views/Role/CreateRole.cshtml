@using NotikaIdentityEmail.Models.IdentityModels
@model CreateRoleViewModel
@{
    ViewData["Title"] = "Rol Oluştur";
    Layout = "~/Views/UserLayout/Index.cshtml";
}


<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Rol Oluşturma Sayfası</h2>
                        <p>Oluşturmak istediğiniz rol sayfasını aşağıya girebilirsiniz.</p>
                    </div>
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" name="RoleName" placeholder="Rol adını giriniz">
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-outline-primary">Rol Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

